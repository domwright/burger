<div class="container">
  <h2>Eat Da Burger</h2>
</div>

  <div class="body">
    <div class="leftSection">
      <div id="uneatenBurgers">
        <ul>
          {{#each burger}}
            {{#unless devoured}}
              {{this.id}}. {{this.burger_name}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>

<!-- Add a burger (undevoured burgers)*/ -->
  <div class="addBurger">
    <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="burgerapp">Burger Name:</label>
          <input type="text" id="burgerapp" name="burgername">
        </div>
      <button type="submit">Add Your Burger</button>
    </form>
  </div>

  <div class="rightSection">
    <div class="devouredburgers">
      <ul>
        {{#each burger}}
          {{#if devoured}}
            {{this.id}}. {{this.burger_name}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>